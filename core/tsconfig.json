{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["esnext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "@asterflow/router": ["../packages/router/src/index.ts"],
      "@asterflow/request": ["../packages/request/src/index.ts"],
      "@asterflow/response": ["../packages/response/src/index.ts"],
      "@asterflow/adapter": ["../packages/adapter/src/index.ts"],
      "@asterflow/plugin": ["../packages/plugin/src/index.ts"],
      "@asterflow/core": ["./src/index.ts"]
    }
  }
}
